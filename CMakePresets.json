{
    "version": 3,
    "configurePresets": [
        {
            "name": "default",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "toolchainFile": "${sourceDir}/gcc-arm-none-eabi.cmake",
            "cacheVariables": {}
        },
        {
            "name": "Root-Debug",
            "inherits": "default",
            "displayName": "Root Debug",
            "binaryDir": "${sourceDir}/build/Root-Debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "Root-Release",
            "inherits": "default",
            "displayName": "Root Release",
            "binaryDir": "${sourceDir}/build/Root-Release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "CM7-Debug",
            "displayName": "CM7 Debug (arm-none-eabi)",
            "description": "Configure and build CM7 with arm-none-eabi toolchain",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/CM7/build",
            "toolchainFile": "${sourceDir}/gcc-arm-none-eabi.cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "CM4-Debug",
            "displayName": "CM4 Debug (arm-none-eabi)",
            "description": "Configure and build CM4 with arm-none-eabi toolchain",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/CM4/build",
            "toolchainFile": "${sourceDir}/gcc-arm-none-eabi.cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "CM7-Build",
            "configurePreset": "CM7-Debug"
        },
        {
            "name": "CM4-Build",
            "configurePreset": "CM4-Debug"
        },
        {
            "name": "Root-Build-Debug",
            "configurePreset": "Root-Debug"
        },
        {
            "name": "Root-Build-Release",
            "configurePreset": "Root-Release"
        }
    ]
}